{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Spring Boot Backend",
			"type": "shell",
			"command": ".\\mvnw.cmd",
			"args": [
				"spring-boot:run"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Run React Frontend",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}